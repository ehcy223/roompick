<h1>投稿編集</h1>

<%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "エラー") %>があります：</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating, "評価" %>
    <%= f.number_field :rating, in: 1..5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "画像アップロード" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit "更新する", class: "btn btn-primary" %>
<% end %>

<hr>
  <%= button_to '削除する', @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>