<h1>会員情報編集</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
  <div>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password, "パスワード（変更する場合のみ）" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.submit "更新" %>

  <%= link_to "退会する", user_unsubscribe_path(current_user), class: "btn btn-warning" %>
<% end %>