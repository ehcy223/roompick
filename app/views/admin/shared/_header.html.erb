<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to "Admin", admin_root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="adminNav">
      <!-- 左：一覧リンク -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><%= link_to "会員一覧", admin_users_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "投稿一覧", admin_posts_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "コメント一覧", admin_comments_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "カテゴリ一覧", admin_categories_path, class: "nav-link" %></li>
        <%# <li class="nav-item"><%= link_to "タグ一覧", admin_tags_path, class: "nav-link" %></li>
      </ul>

      <!-- 中央：検索（投稿タイトル簡易検索） -->
      <div class="navbar-search mx-lg-auto my-2 my-lg-0">
        <%= form_with url: admin_posts_path, method: :get, local: true, class: "d-flex" do |f| %>
          <%= f.text_field :q, value: params[:q], class: "form-control form-control-sm me-2",
                placeholder: "投稿を検索（タイトル）" %>
          <%= f.submit "検索", class: "btn btn-outline-light btn-sm" %>
        <% end %>
      </div>

      <!-- 右：ログアウト（ログイン時のみ） -->
      <ul class="navbar-nav ms-lg-3">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>